[flake8]
show-source=True
statistics=True
per-file-ignores=*/__init__.py:F401
ignore=E402,E501,W503,E203,D401,R504,R505,SIM102,SIM117,SIM118,D100,D101,D102,D103,D105,D106,D107,D200,D202,D205,D212,D415,A001,A003,C408,I100,I101,I201,I202,Q000,W291
max-line-length = 120
max-complexity = 30
exclude=_*,.vscode,.git,docs/**
docstring-convention=google
suppress-none-returning=True
allow-star-arg-any=True
